<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main_screen.search.before.BeforeSearchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_latest_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginVertical="16dp"
            android:text="@string/hint_latest_search"
            style="@style/DietinTextTitle.SubTitle"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_delete_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/hint_delete_all"
            android:textColor="@color/danger"
            style="@style/DietinTextButton"
            android:layout_gravity="center_vertical|end"
            android:gravity="end"/>

    </LinearLayout>


    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/cv_latest_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_recommended"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:elevation="2dp">

        <TextView
            android:id="@+id/tv_recommended_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginVertical="8dp"
            android:text="@string/hint_recommended"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            style="@style/DietinTextTitle.SubTitle" />

    </androidx.cardview.widget.CardView>

    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/cv_food_recommended"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="8dp"/>

</LinearLayout>

