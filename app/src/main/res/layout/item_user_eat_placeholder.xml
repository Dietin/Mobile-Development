<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/shimmer_base"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:paddingVertical="6dp">

        <TextView
            android:id="@+id/tv_eat_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_sub3"
            android:textColor="@color/white"
            android:layout_marginEnd="32dp"
            android:background="@color/shimmer_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_eat_time"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_sub5"
            android:textColor="@color/white"
            android:background="@color/shimmer_text"
            app:layout_constraintTop_toBottomOf="@id/tv_eat_title"
            app:layout_constraintStart_toStartOf="@id/tv_eat_title" />

        <ImageView
            android:id="@+id/iv_eat_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="4dp"
            android:scaleType="fitCenter"
            android:background="@color/shimmer_image"
            app:layout_constraintStart_toStartOf="@id/tv_eat_time"
            app:layout_constraintTop_toBottomOf="@id/tv_eat_time" />

        <TextView
            android:id="@+id/tv_calories_eaten"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:textSize="@dimen/text_size_sub3"
            android:textColor="@color/white"
            android:background="@color/shimmer_text"
            app:layout_constraintStart_toEndOf="@+id/iv_eat_icon"
            app:layout_constraintTop_toTopOf="@id/iv_eat_icon"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_sub5"
            android:background="@color/shimmer_text"
            app:layout_constraintStart_toStartOf="@+id/tv_calories_eaten"
            app:layout_constraintTop_toBottomOf="@+id/tv_calories_eaten" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>