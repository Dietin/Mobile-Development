<resources>
    <!-- Base application theme. -->
    <style name="Theme.Dietin" parent="Base.Theme.Dietin">

    </style>

    <style name="Base.Theme.Dietin" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/jet</item>
        <item name="colorSecondary">@color/satin_gold</item>
        <item name="colorAccent">@color/gunmetal</item>
        <item name="statusBarBackground">@color/jet</item>
        <item name="statusBarForeground">@color/white</item>
        <item name="fontFamily">@font/inter</item>
    </style>

<!--    <style name="Base.Theme.Dietin.NoActionBar" parent="Base.Theme.Dietin">-->
<!--        <item name="windowActionBar">false</item>-->
<!--        <item name="windowNoTitle">true</item>-->
<!--    </style>-->

    <style name="DietinProgressBar.Circular" parent="Widget.Material3.CircularProgressIndicator">
        <item name="indicatorSize">150dp</item>
        <item name="trackColor">@color/platinum</item>
        <item name="trackCornerRadius">5dp</item>
        <item name="trackThickness">15dp</item>
    </style>

    <style name="DietinLoadingDialog" parent="Theme.Material3.Light.Dialog">
        <item name="windowMinWidthMajor">0%</item>
        <item name="windowMinWidthMinor">0%</item>
        <item name="backgroundColor">@color/white</item>
    </style>

    <style name="DietinTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="strokeColor">@color/jet_calmer</item>
    </style>

    <style name="DietinTextInputLayout.Dropdown" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="strokeColor">@color/jet_calmer</item>
    </style>


    <style name="DietinTextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingHorizontal">0dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="rippleColor">#19363636</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="DietinButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">8dp</item>
        <item name="rippleColor">#19363636</item>
    </style>

    <style name="DietinButton.IconOnly" parent="Widget.Material3.Button.IconButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="iconGravity">textStart</item>
    </style>


    <style name="DietinTextTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DietinLayoutCard" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Dietin.ReadonlyChip" parent="Widget.Material3.Chip.Assist">
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="chipCornerRadius">8dp</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipMinHeight">20dp</item>
        <item name="android:clickable">false</item>
        <item name="android:checkable">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="Dietin.ReadonlyChip.Indicator" parent="Dietin.ReadonlyChip">
        <item name="chipMinHeight">0dp</item>
        <item name="android:clickable">false</item>
        <item name="android:checkable">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="DietinTextTitle.SubTitle" parent="DietinTextTitle">
        <item name="android:textSize">@dimen/text_size_sub_title</item>
    </style>

    <style name="Dietin.NavigationActive" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/satin_gold_calmer</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="Dietin.RadioCard.Inactive" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/jet_calmer</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingRight">16dp</item>
        <item name="contentPaddingBottom">12dp</item>
        <item name="contentPaddingTop">12dp</item>
    </style>


</resources>